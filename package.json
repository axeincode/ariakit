{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/url-loader"
    ]
  },
  "scripts": {
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext js,ts,tsx",
    "dev": "lerna exec --scope reakit -- npm run dev",
    "build": "lerna exec --scope reakit* --ignore *codemods --concurrency 1 -- npm run build",
    "build:clean": "lerna exec --scope reakit* --ignore *codemods -- npm run build:clean",
    "website": "lerna exec --scope website -- npm run start",
    "website:build": "lerna exec --scope website -- npm run build",
    "release": "lerna publish",
    "release:next": "npm run release -- --npm-tag=next --preid=beta"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx --fix",
      "git add"
    ],
    "{README,CHANGELOG}.md": [
      "scripts/copy-statics.sh"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.13",
    "@types/prop-types": "15.5.8",
    "@types/react": "16.7.22",
    "@types/react-dom": "^16.0.11",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "babel-plugin-styled-components": "^1.10.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-dom": "^3.0.1",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.1",
    "lodash": "^4.17.11",
    "prettier": "1.16.1",
    "raf": "^3.4.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.7.0",
    "react-testing-library": "^5.4.4",
    "rollup": "^0.68.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-ignore": "^1.0.4",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-uglify": "^6.0.2",
    "typescript": "3.2.4",
    "typescript-eslint-parser": "^21.0.2"
  }
}
